/* pages/login/index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.button-login {
  margin-top: 200rpx;
  padding: 10px;
  background-color: #2d557c;
  color: #ffffff;
  font-size: 16px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaaaaa;
  width: 80%;
  height: 65%;
}
.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.avatar {
  display: block;
  width: 56px;
  height: 56px;
}
.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}
.nickname-label {
  width: 105px;
}
.nickname-input {
  flex: 1;
}